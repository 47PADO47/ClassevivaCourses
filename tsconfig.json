{
  "compileOnSave": false,
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "importHelpers": false,
    "module": "es2022",
    "outDir": "./dist/",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "strict": true,
    "allowJs": true,
    "paths": {
			"@/*": ["./src/*"],
			"@root/*": ["./*"]
		},
    "types": [
			"webpack/module",
    ],
    "resolveJsonModule": true,
  }
}
